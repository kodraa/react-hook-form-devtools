{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "elysia": "catalog:",
    "@elysiajs/cors": "^1.3.3",
    "@orpc/server": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "^4.1.11",
    "@react-hook-form-devtools/api": "workspace:*",
    "@react-hook-form-devtools/auth": "workspace:*",
    "@react-hook-form-devtools/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "tsdown": "^0.16.5",
    "@react-hook-form-devtools/config": "workspace:*"
  }
}
